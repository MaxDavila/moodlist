
<h1>Welcome <%= @first_name %> </h1>

<p> Search by mood and genre: </p>
<form id="gimmesongs" action="/search" method="get">
  Current Mood: <select name="current_mood">
  <%= erb :_mood_options %>
</select>
Desired Mood: <select name="desired_mood">
<%= erb :_mood_options %>
</select>
Style: <select name="style">
<%= erb :_style_options %>
</select>
<input type="submit" value="Find me songs!">
</form>




<% if @songs %>



  <p>
    <iframe id ="iframe" src="https://embed.spotify.com/?uri=spotify:trackset:Your customized playlist:<%= @songs.join(',') %>" frameborder='0' allowtransparency='true' height='900'></iframe>
  </p>
  <%end%>

<div class ="loading_image">
    <img src="images/load.gif" width="100" height="100">
</div>

<a href="/logout" id="logout">Logout</a>

